<Window x:Class="KumanoKodo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KumanoKodo"
        xmlns:vm="clr-namespace:KumanoKodo.ViewModels"
        mc:Ignorable="d"
        Title="Kumano Kodo" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Menu -->
        <StackPanel Grid.Column="0" 
                    Background="#F5F5F5" 
                    Margin="0,0,1,0">
            <Button Content="Home" 
                    Command="{Binding NavigateToHomeCommand}"
                    Style="{StaticResource NavigationButtonStyle}"
                    Margin="10,20,10,10"/>
            
            <Button Content="Lessons" 
                    Command="{Binding NavigateToLessonsCommand}"
                    Style="{StaticResource NavigationButtonStyle}"
                    Margin="10,10"/>
            
            <Button Content="Progress" 
                    Command="{Binding NavigateToProgressCommand}"
                    Style="{StaticResource NavigationButtonStyle}"
                    Margin="10,10"/>
        </StackPanel>

        <!-- Content Frame -->
        <Frame Grid.Column="1" 
               Content="{Binding CurrentPage}"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window> 