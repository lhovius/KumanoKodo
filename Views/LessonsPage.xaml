<Page x:Class="KumanoKodo.Views.LessonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KumanoKodo.Views"
      xmlns:vm="clr-namespace:KumanoKodo.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=vm:LessonsViewModel}"
      Title="Lessons">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="{Binding StatusMessage}" Margin="0,0,10,0"/>
            <ProgressBar IsIndeterminate="True" Width="100" Height="2" 
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lessons List -->
            <ListBox Grid.Column="0" 
                     ItemsSource="{Binding Lessons}"
                     SelectedItem="{Binding SelectedLesson}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageUrl}" Width="50" Height="50" Margin="0,0,10,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <TextBlock Text="âœ“ Completed" Foreground="Green"
                                         Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Lesson Details -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Lesson Header -->
                <StackPanel Grid.Row="0" Visibility="{Binding SelectedLesson, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding SelectedLesson.Title}" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedLesson.Description}" TextWrapping="Wrap" Margin="0,10"/>
                </StackPanel>

                <!-- Lesson Media -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10"
                          Visibility="{Binding SelectedLesson, Converter={StaticResource NullToVisibilityConverter}}">
                    <Image Source="{Binding SelectedLesson.ImageUrl}" Width="200" Height="200" Margin="0,0,10,0"/>
                    <MediaElement Source="{Binding SelectedLesson.AudioUrl}" LoadedBehavior="Manual"/>
                </StackPanel>

                <!-- Vocabulary List -->
                <ListView Grid.Row="2" ItemsSource="{Binding VocabularyList}"
                         Visibility="{Binding SelectedLesson, Converter={StaticResource NullToVisibilityConverter}}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Source="{Binding ImageUrl}" Width="40" Height="40"/>
                                <TextBlock Grid.Column="1" Text="{Binding Word}" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{Binding Meaning}" VerticalAlignment="Center"/>
                                <MediaElement Grid.Column="3" Source="{Binding AudioUrl}" LoadedBehavior="Manual" Width="30"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!-- Action Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Mark as Completed" 
                    Command="{Binding MarkLessonCompletedCommand}"
                    CommandParameter="{Binding SelectedLesson.Id}"
                    Visibility="{Binding SelectedLesson, Converter={StaticResource NullToVisibilityConverter}}"
                    Margin="0,0,10,0"/>
            <Button Content="Refresh" Command="{Binding LoadLessonsCommand}"/>
        </StackPanel>
    </Grid>
</Page> 