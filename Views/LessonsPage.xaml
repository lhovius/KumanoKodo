<Page x:Class="KumanoKodo.Views.LessonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LessonsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Available Lessons" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10"/>

        <ListView Grid.Row="1" 
                  Margin="20,0,20,20"
                  ItemsSource="{Binding Lessons}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding Title}" 
                                   FontSize="18" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Description}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Vocabulary List -->
        <ListView Grid.Row="2" ItemsSource="{Binding VocabularyList}"
                 Visibility="{Binding SelectedLesson, Converter={StaticResource NullToVisibilityConverter}}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="{Binding ImageUrl}" Width="40" Height="40"/>
                        <TextBlock Grid.Column="1" Text="{Binding Word}" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="{Binding Meaning}" VerticalAlignment="Center"/>
                        <MediaElement Grid.Column="3" Source="{Binding AudioUrl}" LoadedBehavior="Manual" Width="30"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Grammar Topics -->
        <Grid Grid.Row="3" Margin="0,20,0,0"
              Visibility="{Binding SelectedLesson, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Grammar Topics" 
                     FontSize="18" 
                     FontWeight="Bold" 
                     Margin="0,0,0,10"/>

            <ListView Grid.Row="1" 
                     ItemsSource="{Binding GrammarTopics}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Title}" 
                                     VerticalAlignment="Center"/>
                            <Button Grid.Column="1" 
                                    Content="View PDF"
                                    Command="{Binding DataContext.OpenGrammarPdfCommand, 
                                              RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding PDF_Link}"
                                    Style="{StaticResource NavigationButton}"
                                    Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page> 