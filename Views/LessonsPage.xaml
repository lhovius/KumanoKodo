<Page x:Class="KumanoKodo.Views.LessonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KumanoKodo.Views"
      xmlns:vm="clr-namespace:KumanoKodo.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LessonsPage">

    <Page.DataContext>
        <vm:LessonsViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lessons List -->
        <ListBox Grid.Column="0" 
                 ItemsSource="{Binding Lessons}"
                 SelectedItem="{Binding SelectedLesson}"
                 Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" 
                                 FontWeight="Bold" 
                                 Margin="0,5"/>
                        <TextBlock Text="{Binding Description}" 
                                 TextWrapping="Wrap" 
                                 Margin="0,5"/>
                        <ProgressBar Height="2" 
                                   Value="{Binding Progress}" 
                                   Margin="0,5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Lesson Content -->
        <ScrollViewer Grid.Column="1" 
                      Margin="10">
            <StackPanel>
                <TextBlock Text="{Binding SelectedLesson.Title}" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="{Binding SelectedLesson.Description}" 
                         TextWrapping="Wrap" 
                         Margin="0,0,0,20"/>

                <!-- Lesson Image -->
                <Image Source="{Binding SelectedLesson.ImageUrl}" 
                       MaxHeight="300" 
                       Stretch="Uniform" 
                       Margin="0,0,0,20"/>

                <!-- Lesson Audio -->
                <MediaElement Source="{Binding SelectedLesson.AudioUrl}" 
                            LoadedBehavior="Manual" 
                            UnloadedBehavior="Stop"
                            Margin="0,0,0,20"/>

                <!-- Vocabulary List -->
                <TextBlock Text="Vocabulary" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>
                
                <ItemsControl ItemsSource="{Binding SelectedLesson.Vocabulary}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDDDDD" 
                                    BorderThickness="1" 
                                    Margin="0,5" 
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Word}" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Meaning}" 
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                              Orientation="Horizontal">
                                        <!-- Vocabulary Image -->
                                        <Image Source="{Binding ImageUrl}" 
                                               Width="50" 
                                               Height="50" 
                                               Margin="10,0,0,0"/>

                                        <!-- Vocabulary Audio -->
                                        <MediaElement Source="{Binding AudioUrl}" 
                                                    Width="50" 
                                                    Height="50" 
                                                    LoadedBehavior="Manual" 
                                                    UnloadedBehavior="Stop"
                                                    Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 