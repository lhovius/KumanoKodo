<Page x:Class="KumanoKodo.Views.ProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KumanoKodo.Views"
      xmlns:vm="clr-namespace:KumanoKodo.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=vm:ProgressViewModel}"
      Title="Progress">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="{Binding StatusMessage}" Margin="0,0,10,0"/>
            <ProgressBar IsIndeterminate="True" Width="100" Height="2" 
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Progress Summary -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Learning Progress" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- Progress Map -->
                <Image Source="{Binding ProgressMapUrl}" MaxHeight="300" Stretch="Uniform" Margin="0,0,0,20"/>
                
                <!-- Summary Statistics -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Lessons Progress -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                        <TextBlock Text="Lessons Completed" FontWeight="Bold"/>
                        <TextBlock>
                            <Run Text="{Binding CompletedLessons}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding TotalLessons}"/>
                        </TextBlock>
                        <ProgressBar Value="{Binding CompletedLessons}" Maximum="{Binding TotalLessons}" Height="4" Margin="0,5"/>
                    </StackPanel>

                    <!-- Quiz Progress -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                        <TextBlock Text="Quiz Performance" FontWeight="Bold"/>
                        <TextBlock>
                            <Run Text="{Binding CorrectQuizzes}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding TotalQuizzes}"/>
                        </TextBlock>
                        <ProgressBar Value="{Binding CorrectQuizzes}" Maximum="{Binding TotalQuizzes}" Height="4" Margin="0,5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Right Panel - Detailed Progress -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Lesson Progress List -->
                <TextBlock Grid.Row="0" Text="Lesson History" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListView Grid.Row="1" ItemsSource="{Binding LessonProgress}" Margin="0,0,0,20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Title}"/>
                                <TextBlock Grid.Column="1" Text="{Binding CompletedDate, StringFormat=d}" Margin="10,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Quiz Progress List -->
                <TextBlock Grid.Row="2" Text="Quiz History" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListView Grid.Row="3" ItemsSource="{Binding QuizProgress}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0">
                                    <Run Text="Quiz #"/>
                                    <Run Text="{Binding QuizId}"/>
                                </TextBlock>
                                <TextBlock Grid.Column="1" Margin="10,0">
                                    <Run Text="{Binding CorrectAttempts}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding IncorrectAttempts}"/>
                                </TextBlock>
                                <TextBlock Grid.Column="2" Text="{Binding NextReviewDate, StringFormat=d}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!-- Action Bar -->
        <Button Grid.Row="2" Content="Refresh" Command="{Binding RefreshProgressCommand}"
                HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Page> 