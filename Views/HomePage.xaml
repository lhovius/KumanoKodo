<Page x:Class="KumanoKodo.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Welcome to Kumano Kodo" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Begin your journey along the ancient pilgrimage routes of Japan" 
                       FontSize="18" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center" 
                       Margin="0,0,0,40"/>
            
            <TextBlock Text="The Kumano Kodo is a network of ancient pilgrimage routes that crisscross the Kii Peninsula, connecting three major shrines: Kumano Hongu Taisha, Kumano Nachi Taisha, and Kumano Hayatama Taisha." 
                       TextWrapping="Wrap" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Start your learning journey by exploring the lessons and tracking your progress along the way." 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page> 